{varType App\Model\Entities\User[] $users}
{block content}

<h1 n:block="title">Správa uživatelů</h1>
{if !empty($users)}
    <table class="table table-hover mt-4">
        <thead>
        <tr>
            <th scope="col">Jméno uživatele</th>
            <th scope="col" class="col-xl-1 col-md-2">Akce</th>
        </tr>
        </thead>
        <tbody>
        {foreach $users as $user}
            <tr>
                <td>{$user->name}</td>
                <td class="text-nowrap">
                    <a href="{link edit id=>$user->userId}" class="btn btn-sm btn-outline-primary">Upravit</a>
                </td>
            </tr>
        {/foreach}
        </tbody>
    </table>

{else}
    <p class="text-muted">Nebyli nalezeni žádní uživatelé.</p>
{/if}

<div class="my-4">
    <a href="{link add}" class="btn btn-primary">Nový uživatel</a>
</div>